			<Attributes>
				<Attribute>
					<Name>glo_Position</Name>
					<Semantic>Position</Semantic>
					<Location>0</Location>
				</Attribute>
			</Attributes>

			<Uniforms>
				<Uniform>
					<Name>glo_ModelViewProjection</Name>
					<Semantic>ModelViewProjection</Semantic>
				</Uniform>
				<Uniform>
					<Name>glo_UniformColor</Name>
					<Semantic>Color</Semantic>
